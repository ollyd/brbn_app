<a href="/users/sign_out" data-method="delete">Sign out</a>
<div id="content">
    <form id="search-form" class="form-horizontal">
      <fieldset>
        <div id="search_group" class="control-group">
          <label class="control-label" for="search"></label>
          <div class="controls">
            <input id="search" name="search" type="search" required="required" placeholder="Search for bourbon goodness here..." />
          </div>
        </div>
        <div class="form-actions">
          <input type="submit" value="Search" class="btn btn-primary" />
        </div>
      </fieldset>
    </form>

    <div id="bourbons">
        <li><a href="#bourbons/{{ id }}">Name: {{name}}</a></li>
    </div>
</div>  