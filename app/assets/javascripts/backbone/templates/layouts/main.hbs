<section class="wrapper-md-bg">
    <a href="/users/sign_out" data-method="delete">Sign out</a>
    <div class="container">
        <img src="http://www.clker.com/cliparts/1/b/b/d/1248179380933577373whisky_glass.svg.med.png" id="logo">
        <div id="logo-name">↫Brbn↬</div>
        <div class="row">
            <div class="col-sm-12">
                <div class="widget padding-lg bg-dark">
                    <div id="content">
                        <form id="search-form" class="form-horizontal">
                          <fieldset>
                            <div id="search_group" class="control-group">
                              <label class="control-label" for="search"></label>
                              <div class="controls">
                                <input id="search" name="search" type="search" required="required" placeholder="Search for bourbon goodness here..." />
                              </div>
                            </div>
                            <div class="form-actions">
                              <input type="submit" value="search" class="btn btn-primary" />
                            </div>
                          </fieldset>
                        </form>

                        <div id="bourbons">
                            <li><a href="#bourbons/{{ id }}">Name: {{name}}</a></li>
                        </div>
                    </div>
                </div>
            </div>  
        </div>  
       
    </div>
</section>                      